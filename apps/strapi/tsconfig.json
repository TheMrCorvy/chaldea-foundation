{
    "extends": "@strapi/typescript-utils/tsconfigs/server",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "allowJs": true,
        "strict": false,
        "esModuleInterop": true,
        "lib": ["ES2022"],
        "module": "commonjs",
        "target": "ES2022",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./", "./**/*.ts", "./**/*.js", "src/**/*.json"],
    "exclude": [
        "node_modules/",
        "build/",
        "dist/",
        ".cache/",
        ".tmp/",
        "src/admin/",
        "**/*.test.*",
        "src/plugins/**"
    ]
}
